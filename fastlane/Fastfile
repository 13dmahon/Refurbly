default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight (Capacitor + match)"
  lane :beta do
    # App Store Connect API key (matches your GitHub secrets)
    api_key = app_store_connect_api_key(
      key_id:      ENV["ASC_API_KEY_ID"],
      issuer_id:   ENV["ASC_API_ISSUER_ID"],
      key_content: ENV["ASC_API_KEY_P8"],
      duration: 1200
    )

    # Manage certs/profiles in your private signing repo
    match(
      type: "appstore",
      app_identifier: ENV["APP_IDENTIFIER"],
      git_url: ENV["MATCH_REPO"],
      git_branch: "main",
      username: ENV["APPLEID_USERNAME"],
      readonly: false
    )

    # Derive the installed App Store profile name from the env var that 'match' sets.
    # It looks like: sigh_com_refurbly_app_appstore_profile-name (fastlane prints this in the logs).
    profile_key = "sigh_#{ENV['APP_IDENTIFIER']}_appstore_profile-name".gsub('.', '_').gsub('-', '_')
    appstore_profile_name = ENV[profile_key]

    UI.message("Using provisioning profile: #{appstore_profile_name}") if appstore_profile_name

    # Build archive (force manual signing with the App Store profile)
    gym(
      scheme: ENV["IOS_SCHEME"] || "App",
      workspace: ENV["IOS_WORKSPACE"] || "ios/App/App.xcworkspace",
      configuration: "Release",
      export_method: "app-store",
      include_bitcode: false,
      # Make Xcode use the distribution profile at compile/archive time
      xcargs: [
        "DEVELOPMENT_TEAM=#{ENV['DEV_TEAM']}",
        "CODE_SIGN_STYLE=Manual",
        ("PROVISIONING_PROFILE_SPECIFIER=#{appstore_profile_name}" if appstore_profile_name),
        "CODE_SIGN_IDENTITY=Apple Distribution",
        "CODE_SIGNING_ALLOWED=YES"
      ].compact.join(' ')
    )

    # Upload to TestFlight
    pilot(
      api_key: api_key,
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end

default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight (Capacitor + match)"
  lane :beta do
    # App Store Connect API key
    api_key = app_store_connect_api_key(
      key_id:      ENV["ASC_API_KEY_ID"],
      issuer_id:   ENV["ASC_API_ISSUER_ID"],
      key_content: ENV["ASC_API_KEY_P8"],
      duration: 1200
    )

    # Install certs + App Store profile via match
    match(
      type: "appstore",
      app_identifier: ENV["APP_IDENTIFIER"],
      git_url: ENV["MATCH_REPO"],
      git_branch: "main",
      username: ENV["APPLEID_USERNAME"],
      readonly: false
    )

    # Pull the exact App Store profile name & UUID that match installed
    mapping          = lane_context[SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING] || {}
    app_identifier   = ENV["APP_IDENTIFIER"]
    profile_name     = mapping[app_identifier] || mapping.values.first
    uuid_env_key     = "sigh_#{app_identifier}_appstore".gsub('.', '_').gsub('-', '_')
    profile_uuid     = ENV[uuid_env_key]

    UI.user_error!("Could not determine App Store provisioning profile name") unless profile_name
    UI.user_error!("Could not determine App Store provisioning profile UUID") unless profile_uuid
    UI.message("Using profile: #{profile_name} (UUID: #{profile_uuid})")

    gym(
      scheme: ENV["IOS_SCHEME"] || "App",
      workspace: ENV["IOS_WORKSPACE"] || "ios/App/App.xcworkspace",
      configuration: "Release",
      export_method: "app-store",
      include_bitcode: false,

      # Ensure export step also uses the correct profile
      export_options: {
        provisioningProfiles: { app_identifier => profile_name }
      },

      # Force manual signing during compile/archive (cover all variants)
      xcargs: %Q(
        DEVELOPMENT_TEAM=#{ENV['DEV_TEAM']}
        CODE_SIGN_STYLE=Manual
        CODE_SIGN_IDENTITY="Apple Distribution"
        PROVISIONING_PROFILE_SPECIFIER="#{profile_name}"
        PROVISIONING_PROFILE="#{profile_uuid}"
        PROVISIONING_PROFILE_SPECIFIER[sdk=iphoneos*]="#{profile_name}"
        PROVISIONING_PROFILE[sdk=iphoneos*]="#{profile_uuid}"
        CODE_SIGNING_ALLOWED=YES
      ).squeeze(' ').strip
    )

    pilot(
      api_key: api_key,
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end

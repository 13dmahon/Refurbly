# fastlane/Fastfile
default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight (Capacitor + match)"
  lane :beta do
    setup_ci

    api_key = app_store_connect_api_key(
      key_id:      ENV["ASC_API_KEY_ID"],
      issuer_id:   ENV["ASC_API_ISSUER_ID"],
      key_content: ENV["ASC_API_KEY_P8"],
      duration:    1200
    )

    match(
      type:           "appstore",
      app_identifier: ENV["APP_IDENTIFIER"],
      git_url:        ENV["MATCH_REPO"],
      git_branch:     "main",
      username:       ENV["APPLEID_USERNAME"],
      readonly:       false
    )

    # --- BUILD NUMBER: always use latest TF + 1 ---
    next_build = latest_testflight_build_number(
      api_key:        api_key,
      app_identifier: ENV["APP_IDENTIFIER"]
    ) + 1

    increment_build_number(
      xcodeproj:   "ios/App/App.xcodeproj",
      build_number: next_build.to_s
    )
    # ---------------------------------------------

    # Resolve the provisioning profile Match installed
    mapping        = lane_context[SharedValues::MATCH_PROVISIONING_PROFILE_MAPPING] || {}
    app_identifier = ENV["APP_IDENTIFIER"]
    profile_name   = mapping[app_identifier] || mapping.values.first
    UI.user_error!("Could not determine App Store provisioning profile name") unless profile_name
    UI.message("Using provisioning profile: #{profile_name}")

    gym(
      scheme:         ENV["IOS_SCHEME"]    || "App",
      workspace:      ENV["IOS_WORKSPACE"] || "ios/App/App.xcworkspace",
      configuration:  "Release",
      export_method:  "app-store",
      include_bitcode: false,
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: { app_identifier => profile_name }
      },
      xcargs: "DEVELOPMENT_TEAM=#{ENV['DEV_TEAM']} CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE_SPECIFIER=\"#{profile_name}\" CODE_SIGN_IDENTITY=\"Apple Distribution\" -allowProvisioningUpdates"
    )

    pilot(
      api_key: api_key,
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end

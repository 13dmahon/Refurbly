default_platform(:ios)

platform :ios do
  desc "Build & upload to TestFlight (Capacitor + match)"
  lane :beta do
    # App Store Connect API key (matches your secrets)
    api_key = app_store_connect_api_key(
      key_id:     ENV["ASC_API_KEY_ID"],
      issuer_id:  ENV["ASC_API_ISSUER_ID"],
      key_content: ENV["ASC_API_KEY_P8"],
      duration: 1200
    )

    # Signing via match (reads MATCH_REPO and MATCH_PASSWORD from env)
    match(
      type: "appstore",
      app_identifier: ENV["APP_IDENTIFIER"],
      git_url: ENV["MATCH_REPO"],
      username: ENV["APPLEID_USERNAME"],
      readonly: false
    )

    # Build
    gym(
      scheme: ENV["IOS_SCHEME"] || "App",
      workspace: ENV["IOS_WORKSPACE"] || "ios/App/App.xcworkspace",
      configuration: "Release",
      export_method: "app-store",
      include_bitcode: false
    )

    # Upload to TestFlight
    pilot(
      api_key: api_key,
      skip_submission: true,
      skip_waiting_for_build_processing: true
    )
  end
end
